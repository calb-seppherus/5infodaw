<%-include('cabecalho.ejs')%>
    <form method="post">
        <div class="form-floating">
            <input class="form-control" type="search" name="pesquisar" id="search" placeholder="Pesquisar">
            <label class="form-label" for="search">Pesquisar</label>
        </div>
        <div>
            <input class="btn btn-outline-primary" type="submit" value="pesquisar">
        </div>
    </form>
    <table class="table table-striped table-bordered">
        <tr>
            <th>Titulo</th>
            <th>Texto</th>
            <th>Foto</th>
            <th>Data</th>
        </tr>
        <% Post.forEach(function(post){ %>
            <tr>
                <td>
                    <%=post.titulo%>
                </td>
                <td>
                    <%=post.texto%>
                </td>
                <td>
                    <%=post.tags%>
                </td>
                <td>
                    <img src="/<%=post.foto%>" width="100px" alt="Foto do post">
                </td>
                <td>
                    <%=post.data%>
                </td>
                <td>
                    <a class="btn btn-primary" href="/postupdate/<%=post._id%>">Editar</a>
                    <a class="btn btn-danger" href="/postdelete/<%=post._id%>">Deletar</a>
                </td>
                </div>
            </tr>
        <%})%>
    </table>
<%-include('rodape.ejs')%>