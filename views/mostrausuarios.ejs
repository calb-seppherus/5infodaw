<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <title>Mostra Usuarios</title>
</head>

<body class="bg-primary">
    <div class="container bg-body-secondary">
        <div class="row">
            <div class="col">
                <h1 class="text-center p-4">cadastro de usuario</h1>
            </div>
        </div>
        <div class="row">
            <div class="col-3">
                <ul class="nav flex-column">
                    <li class="nav-item">
                        <a class="nav-link active" aria-current="page" href="/mostrausuarios">Listar usuario</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/usuario">Adicionar usuario</a>
                    </li>
                </ul>
            </div>
            <div class="col-9">
                <form method="post">
                    <div class="form-floating">
                        <input class="form-control" type="search" name="pesquisar" id="search" placeholder="Pesquisar">
                        <label class="form-label" for="search">Pesquisar</label>
                    </div>
                    <div>
                        <input class="btn btn-outline-primary" type="submit" value="pesquisar">
                    </div>
                </form>
                <table class="table table-striped table-bordered">
                    <tr>
                        <th>Nome</th>
                        <th>Email</th>
                        <th>Foto</th>
                    </tr>
                    <% Usuarios.forEach(function(usuario){ %>
                        <tr>
                            <td>
                                <%=usuario.nome%>
                            </td>
                            <td>
                                <%=usuario.email%>
                            </td>
                            <td>
                                <img src="/<%=usuario.foto%>" width="100px" alt="Foto do perfil">
                            </td>
                            <td>
                                <a href="/editarusuario/<%=usuario._id%>">Editar</a>
                                <a href="/deletarusuario/<%=usuario._id%>">Deletar</a>
                            </td>
            </div>
            </tr>
            <%})%>
                </table>
        </div>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
        crossorigin="anonymous"></script>
    </div>
</body>

</html>